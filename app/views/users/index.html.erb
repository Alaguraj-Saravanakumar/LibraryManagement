


<p style="color: green"><%= notice %></p>

    <% if current_user.role.eql?("admin")%>
        <div class="user_index_page"><%= link_to "Add New User", signup_path %></div>
    <% end %>
        
      <div class="row">
        <div class="col s12">
          <h1 class="center-align">Users</h1>
        </div>
      </div>

       <%= form_tag users_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search]%>
        <button class="btn waves-effect waves-light" type="submit" name="action" style="padding:5px;">
        <%= submit_tag "Search"%>
          <i class="material-icons right">send</i>
        </button>
      <% end %>
<div class="flex-container">
 <% @users.each do |user| %> 
    <% unless user.role.eql?("admin")%>
    <div class="row container">
      <div class="col s6 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title" ><%= user.name.capitalize %></span>
            <p> <div style="font-size:17px; ">email:  <%= user.email %></div></p>
            <p></p>
          </div>
          <div class="card-action">
          <%= link_to "Show this user", user %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>



<ul class="pagination">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active"><%= will_paginate @users%></a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
</ul>


