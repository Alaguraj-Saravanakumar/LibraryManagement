

 <table>
 
        <thead>
          <tr>
              <th>Title</th>
              <th>Author</th>
              <th>publsihed date</th>
              <% if current_user.role.eql?("admin")%>
                <th> Book rented by</th>
                <th> Total books</th>
                <th> Current books</th>
              <% end %>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
