                 <td > 
                  <ul><% book.users.each do |user| %>
                     <li style="padding:5px;"><%= link_to user.name.capitalize, user%></li>
                  <% end %></ul>
                </td>
               <td><%= book.Total_book %></td> 
               <td><%= book.Current_book %></td> 
             <% end %>
          </tr>
