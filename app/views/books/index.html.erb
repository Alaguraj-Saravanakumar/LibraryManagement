

      <p style="color: green"><%= notice %></p>

      <% if current_user.role.eql?("admin")%>
            <div  style="float:right;padding:10px;margin-top:15px;
               font-size:20px;font-weight:bold;"><%= link_to "Add New book", new_book_path %></div>
        <% end %>


      <div class="row">
        <div class="col s12">
          <h1 class="center-align">Books</h1>
        </div>
      </div>

      <%= form_tag books_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search]%>
        <button class="btn waves-effect waves-light" type="submit" name="action" style="padding:5px;">
        <%= submit_tag "Search"%>
          <i class="material-icons right">send</i>
        </button>
      <% end %>


<% @books.each do |book| %>   
  <div class="row container">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title" style="font-weight:bold; font-size:30px;color:rgba(236, 180, 166, 0.9);
          padding-bottom:10px;"><%= book.title.capitalize %></span>
          <p> <div style="font-size:17px; ">Author:  <%= book.author %>  ||  Published_at :<%= book.published_date %></div></p>
          <p></p>
        </div>
        <div class="card-action">
          <%= link_to "info", book %>
          <% unless current_user.role.eql?("admin")%>
              <% unless current_user.books.include?(book)%>
              <% if current_user.books.count() < 3 && book.Current_book > 0%>
                <td><%= link_to "rent", rent_book_path(book_id:book.id),data:{turbo_method: :post}%></td>
              <% elsif current_user.books.count() == 3 %>
                <a> User BookLimit reached</a>
                <% else %>
                <a> book currently not available </a>
              <% end %>
            <% end %>

            <% if current_user.books.include?(book)%>
              <td><%= link_to "unrent", unrent_book_path(book_id:book.id),data:{turbo_method: :post}%></td>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<ul class="pagination" style="position:relative; bottom:20%;left:20%;padding:10px;">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active" ><%= will_paginate @books%></a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>

       
</div>